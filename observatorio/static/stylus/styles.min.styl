whitemote = #f5f5f5
gray = #95a5a6
orange = #E95420

box_shadow(args)
	-webkit-box-shadow args
	-moz-box-shadow args
	box-shadow args

html
	position relative
	min-height 100%

body
	margin-bottom 60px
	background-color whitemote

footer
	font-size 12px
	color gray
	position absolute
	padding 10px 10px
	bottom 0
	width 100%
	height 50px

#nav-top
	background-color white
	box_shadow(0px 2px 5px -4px rgba(0,0,0,0.75))
	padding 5px 5px
	margin-bottom 20px

#show-day
	padding 8px 5px 0px

.content
	padding 20px
	background-color white
	box_shadow(0px 2px 5px -4px rgba(0,0,0,0.75))

.navbar
	border-radius 0
	margin-bottom 0
	border none

.title-project
	padding-top 5px
	border-top 1px dashed gray

.item
	margin-top 20px

#filter
	background-color orange
	color white
	padding 0px 10px

label
	font-weight normal

ul
	list-style none